package org.tomasino.site{	import flash.text.TextField;	import flash.display.SimpleButton;	import flash.display.DisplayObjectContainer;	import flash.net.navigateToURL;	import flash.net.URLRequest;	import flash.events.MouseEvent;		import org.tomasino.tracking.TrackingEvent;	import flash.events.EventDispatcher;		public class MenuItem	{		public var id:String;		public var url:String;		public var labelTLF:TextField;		public var btn:SimpleButton;		public function MenuItem(newID:String, newURL:String, container:DisplayObjectContainer)		{			id = newID;			url = newURL;			labelTLF = container.getChildByName('txt') as TextField;			btn = container.getChildByName('btn') as SimpleButton;						btn.addEventListener(MouseEvent.ROLL_OUT, onOff);			btn.addEventListener(MouseEvent.ROLL_OVER, onOver);			btn.addEventListener(MouseEvent.CLICK, onClick);		}				private function onOver( mouseEvent:MouseEvent ):void		{			labelTLF.text = id.toUpperCase();		}		private function onOff( mouseEvent:MouseEvent ):void		{			labelTLF.text = '';		}		private function onClick( mouseEvent:MouseEvent ):void		{			var t:TrackingEvent = new TrackingEvent ();			t.data.exitLink = url;			t.data.googleCategory = 'Outbound Links';			t.data.googleClickName = id;			btn.dispatchEvent (t);		}	}}